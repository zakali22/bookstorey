generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    String @id @default(uuid())
  name  String
  books Book[]
}

model Book {
  ratingsCount  Int      @default(0)
  averageRating Int      @default(0)
  buyLink       Boolean
  authors       Author[]
  categories    String[]
  description   String
  imageLink     String
  infoLink      String
  pageCount     Int
  publishedDate DateTime @default(now()) @db.Timestamp(6)
  publisher     String
  title         String
  id            String   @id @default(uuid())
  Books         Books?   @relation(fields: [booksCategory], references: [category])
  booksCategory String?
  Users         Users?   @relation(fields: [usersId], references: [id])
  usersId       String?
}

model Books {
  category String @id
  books     Book[]
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model Users {
  full_name    String
  id           String @id @default(uuid())
  access_token String @db.Uuid
  email        String
  role         String
  created_at   Int
  favourites   Book[]
}
